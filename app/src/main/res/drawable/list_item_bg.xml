<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android= "http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- background -->
    <gradient android:startColor="#FFFFFF" android:endColor="#111111" android:type="radial" android:gradientRadius="800dp"/>

    <!--stroke width and color-->
    <stroke
        android:width="1dp"
        android:color="#101010"/>

    <!-- corner radius-->
    <corners
        android:radius="8dp"/>

    <!--paddings-->
    <padding
        android:left="15dp"
        android:top="10dp"
        android:right="15dp"
        android:bottom="10dp"/>
</shape>